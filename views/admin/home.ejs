        <div class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="card">
                        <canvas id="myChart"></canvas>
                        <input type="hidden" value="<%=product%>" id="product" />
                        <input type="hidden" value="<%=qty%>" id="qty" />
                      </div>
      
                      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      
                      <script>
                        const ctx = document.getElementById("myChart");
                        const name = document.getElementById("product")
                        const count = document.getElementById("qty")
                        const pnames = name.value.split(",");
                        const pcounts = count.value.split(",");
                        
      
                        new Chart(ctx, {
                          type: "pie",
                          data: {
                            labels: pnames,
                            datasets: [
                              {
                                label: "sales",
                                data: pcounts,
                                borderWidth: 1,
                              },
                            ],
                          },
                          options: {
                            scales: {
                              y: {
                                beginAtZero: true,
                              },
                            },
                          },
                        });
                      </script>
                    </div>
                    <div class="col-lg-6">
                      <div class="card">
                        <canvas id="myAnotherChart"></canvas>
                        <input type="hidden" value="<%=key1%>" id="key1" />
                        <input type="hidden" value="<%=key2%>" id="key2" />
                      </div>
      
                      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      
                      <script>
                        const cty = document.getElementById("myAnotherChart");
                        const catname = document.getElementById("key1");
                        const catcount = document.getElementById("key2");
                        const catnames = catname.value.split(",");
                        const catcounts = catcount.value.split(",");
      
                        new Chart(cty, {
                          type: "bar",
                          data: {
                            labels: catnames,
                            datasets: [
                              {
                                label: "sales",
                                data: catcounts,
                                borderWidth: 1,
                              },
                            ],
                          },
                          options: {
                            scales: {
                              y: {
                                beginAtZero: true,
                              },
                            },
                          },
                        });
                      </script>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>


