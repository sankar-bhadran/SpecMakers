          <div class="row align-items-center">
            <div class="col-5">
              <h4 class="page-title">Category Management</h4>
            </div>
            <div class="col-7"></div>
            <div
              class="nk-accordion mt-4"
              id="accordion-1"
              role="tablist"
              aria-multiselectable="true"
            >
              <div class="panel panel-default btn btn-danger text-white">
                <div
                  class="panel-heading text-center"
                  role="tab"
                  id="accordion-1-1-heading"
                >
                  <a
                    class="collapsed"
                    data-toggle="collapse"
                    data-parent="#accordion-1"
                    href="#accordion-1-1"
                    aria-expanded="true"
                    aria-controls="accordion-1-1"
                  >
                    Add Category
                    <span
                      class="panel-heading-arrow fa fa-angle-down text-white"
                    ></span>
                  </a>
                </div>
                <% if(typeof message !=='undefined' ) { %>
                <p style="color: rgb(255, 0, 0); font-weight: bold">
                  <%= message %>
                </p>
                <% } %>
                <div
                  id="accordion-1-1"
                  class="panel-collapse collapse"
                  role="tabpanel"
                  aria-labelledby="accordion-1-1-heading"
                >
                  <form action="admin-category" method="post">
                    <div
                      class="row d-flex justify-content-center align-items-center h-100"
                    >
                      <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example3c"
                            >Enter New Category</label
                          >
                          <input
                            type="text"
                            id="form3Example3c"
                            class="form-control"
                            name="category"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div
                          class="d-flex justify-content-center mx-4 mb-3 mb-lg-4"
                        >
                          <button
                            type="submit"
                            value="Register"
                            class="btn btn-warning btn-lg"
                          >
                            Submit
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
