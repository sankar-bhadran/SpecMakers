                                                                <td>
                                                                    <span>
                                                                       <%=i+1%>
                                                                    </span>
                                                                </td>
                                                                <td style="image-resolution: 5px;">
                                                                    <img src="/banners/<%=banners[i].bannerImage[0] %> "
                                                                    alt="" width="100vw" height="50vh">
                                                                    <!-- <img src="/banners/<%=banners[i].bannerImage[1] %>"
                                                                    alt="" width="100vw" height="50vh">
                                                                    <img src="/banners/<%=banners[i].bannerImage[2] %>"
                                                                    alt="" width="100vw" height="50vh"> -->
                                                                </td>
                                                                  <td>
                                                                    <%=banners[i].banner%>
                                                                  </td>
                                                                  <td>
                                                                    <%=banners[i].description%>
                                                                  </td>
                                                                <td>
                                                                    <%if(banners[i].is_active==1){%>
                                                                        <img style="width: 1.6vw"
                                                                         src="/admin/assets/img/greenmark.png" />
                                                                   <% } else { %>

                                                                    <% } %>
                                                                </td>
                                                                    <td>
                                                                        <button class="btn btn-info" ><a  href="">Edit</a></button>
                                                                    </td>
                                                                    
                                                                <td>
                                                                    <a href="/admin/currentbanner?id=<%=banners[i]._id%>" 
                                                                     class="btn btn-primary"> choose </a>
                                                                </td>


                                                                <!-- modal end -->
                                                            </tr>
                                                            <% } %> 
                                                            <% } %>  
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
