    <form action="/admin/uploadbanner" method="post" class="my-auto" style="height: 80vh; display: flex; justify-content: center;" enctype="multipart/form-data">
        <div class="container h-100 justify-content-center align-items-center" >
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card bg-transparent" style="border-radius: 25px;">
                        <div class="card-body p-md-2">
                            <div class="row justify-content-center" style=" display: flex; justify-content: center;">
                                <div class="col-md-2 col-lg-6 col-xl-5 order-2 order-lg-1 width-50" style="padding: 2rem;">
                                    
    
                                    <form class="mx-1 mx-md-2" >
          
                                        <div class="d-flex flex-row align-items-center mb-2">
                                          
                                          <div class="form-outline flex-fill m-b-5">
                                            <label class="form-label" for="form3Example1c">Banner Name</label>
                                            <input type="text" id="form3Example1c" class="form-control" name="bName" required/>
                                          </div>
                                        </div>
                    
                                        <div class="d-flex flex-row align-items-center mb-2">
                                         
                                          <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Description</label>
                                            <input type="text" id="form3Example4c" class="form-control" name="bDescription" required/>
                                            
                                          </div>
                                        </div> 
     
    
                                      
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                              <label class="form-label" for="form3Example4c">Image</label>
                                              <input type="file" id="form3Example4c" class="form-control" name="bannerImage" accept="image/*" multiple required/>
                                            </div>
                                          </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4" style="margin: 1rem;">
                                          <button  type="submit" value="Register" class="btn btn-primary btn">Add Banner</button>
                                          <a href="/admin/loadbanner" class="btn btn-primary ml-2 btn">Go Back</a>
                                        </div>
                
                                        <% if(typeof message !== 'undefined'){%>
                                            <p style="color:green"><%= message %></p>
                                        <% } %>
                                      </form>
                                </div>
                            </div>
                        </div>
