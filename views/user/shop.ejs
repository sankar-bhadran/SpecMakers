<script>
 function filter(){
    const checkbox=document.getElementsByName('category');
    const price=document.getElementsByName('sort')
    const checkboxvalue=[];
    let pricevalue
    for(i=0; i<checkbox.length;i++){
        console.log(checkbox.length);
      if(checkbox[i].checked){
        checkboxvalue.push(checkbox[i].value)
      }else{
        const index=checkboxvalue.indexOf(checkbox[i].value);
        if(index!==-1){
            checkboxvalue.splice(index,1)
        }
      }
    }
    console.log(checkboxvalue);
    for(i=0;i<price.length;i++){
        if(price[i].checked){
          pricevalue=price[i].value
        }
    }
    console.log(pricevalue);
    
    $.ajax({
        url:'/updateshop',
        type:'post',
        data:{category:checkboxvalue,sortedvalue:pricevalue},
        success:function(data){
            console.log(data);
            let products;
            products=data.products
            console.log(products);
             document.getElementById('products').innerHTML=`
             ${products ? 
             products.map(product => 
      `<a href="/viewproduct?id=${product.id}" class="text-dark text-decoration-none">
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
          <div class="card product-item border-gray mb-4" style="background-color:#EDf1ff;">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
              ${product.image ? `<img class="img-fluid w-100" src="/admin/assets/uploads/${product.image[1]}" alt="">` : ''}
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
              <h6 class="text-truncate mb-3">${product.name}</h6>
              <div>
                <h6>â‚¹${product.price}</h6><h6 class="text-muted ml-2"></h6> 
                ${data.products.user ? 
                  `<a onclick="addtowhislist('${product._id}')">
                  </a>` :
                  `<a onclick="wishlistlogin('login')">
                  </a>`}
              </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light border">
              ${data.products.user ? 
                `<a onclick="addtowhislist('${product._id}')" class="btn btn-sm p-0" style="font-weight:bolder;">
                  <i class="fas fa-heart mr-2" style="color:red"></i>Wishlist
                </a>
                <a class="btn btn-sm p-0" onclick="addtocart('${product._id}')" style="font-weight:bolder;">
                  <i class="fas fa-shopping-cart mr-2 text-dark"></i>Add To Cart
                </a>` :
                `<a onclick="login('message')" class="btn btn-sm p-0" style="font-weight:bolder;">
                  <i class="fas fa-heart mr-2" style="color:red"></i>Wishlist
                </a>
                <a class="btn btn-sm p-0" onclick="login('message')" style="font-weight:bolder;">
                  <i class="fas fa-shopping-cart text-dark mr-2"></i>Add To Cart
                </a>`}
            </div>
          </div>
        </div>
      </a>`).join('') : `
    <div class="flex-c-m flex-w w-full p-t-45">
        <span>NO product</span>
    </div>
`}`;
            

        }
    })


 }

</script>
